@import "lib/variables"
@import "lib/mixins"

// Layout
@font-face
   font-family: JerseyM54
   src: url(../fonts/JerseyM54.ttf)

@font-face
   font-family: Journal
   src: url(../fonts/Journal.ttf)

html
   -webkit-overflow-scrolling: touch
   -webkit-touch-callout: none
   -webkit-user-select: none
   -khtml-user-select: none
   -moz-user-select: none
   -ms-user-select: none
   user-select: none
   -webkit-tap-highlight-color:rgba(0,0,0,0)

.clear
   clear: both
   height: 1px

.is-mobile
   min-height: 0

.header
   dropshadow: 0 2px 3px rgba(0,0,0,.5)
   z-index: 3000
   h1
      text-transform: uppercase
   .ui-btn-left
   .ui-btn-right
      top: 5px
   .ui-title
      margin-top: .5em
      margin-bottom: .5em
      font-family: JerseyM54, Helvetica, Arial, sans-serif
      font-size: 1.2em
      text-transform: uppercase

.ui-loader
   line-height: 1.3em
   .ui-icon-loading
      background-position: 50% 50%
      background-repeat: no-repeat
      width: 60px
      height: 60px
      border-radius: 5px
      border: 1px solid #333
   h1
      font-weight: normal

