.svg-chart
   text
      font-size: .9em
      fill: #fff

   .passion
      fill: url(../#gradient-passion)
   .dedication
      fill: url(../#gradient-dedication)
   .knowledge
      fill: url(../#gradient-knowledge)

.ios
   .svg-chart
      .passion
         fill: #e01500!important
      .dedication
         fill: #003cff!important
      .knowledge
         fill: #008c0a!important

.html-chart
   position: relative
   height: 100%
   .bar
      position: absolute
      bottom: 0
   .passion
      background-passion()
   .dedication
      background-dedication()
   .knowledge
      background-knowledge()