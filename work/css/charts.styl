.svg-chart
   text
      font-size: .9em
      fill: #fff

   .passion
      fill: url(../#gradient-passion)
   .dedication
      fill: url(../#gradient-dedication)
   .knowledge
      fill: url(../#gradient-knowledge)

.html-chart
   position: relative
   height: 100%
   .bar
      position: absolute
      bottom: 0
   .passion
      background-passion()
   .dedication
      background-dedication()
   .knowledge
      background-knowledge()