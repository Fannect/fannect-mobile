.svg-chart
   text
      font-size: .9em
      fill: #fff

   .passion
      fill: #e01500
   .dedication
      fill: #003cff
   .knowledge
      fill: #008c0a

.html-chart
   position: relative
   height: 100%
   .bar
      position: absolute
      bottom: 0
   .passion
      background-passion()
   .dedication
      background-dedication()
   .knowledge
      background-knowledge()