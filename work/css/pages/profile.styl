@import "../lib/mixins"
@import "../lib/variables"

#profile-page
#profile-other-page
   
   .ui-btn-left.ui-btn-icon-notext
      height: 28px
      width: 35px
      .ui-icon-custom
         background: url(../images/icons/BarButton_RosterInvite@2x.png) 50% 50% no-repeat
         background-size: 18px 14px
         margin: 3px 0 0 5px
         height: 20px
         width: 25px

   .profile-images
      position: relative
      height: 250px
      width: 320px
      margin: 0 auto

      .team-wrap
         position: absolute
         right: 0
         top: 0
         width: 210px
         height: 210px
         cursor: pointer
         .cover
            position: absolute
            top: 0
            left: 0
            z-index: 200
            width: 210px
            height: 210px
            background: url(../images/profile/Overlay_TeamPictureFrame.png) no-repeat 
            background-size: 199px 197px
         img
            background: url(../images/fannect_TeamPlaceholderPic@2x.png) no-repeat 
            background-size: 188px 188px
            position: absolute
            top: 4px
            left: 5px
            height: 188px
            width: 188px
            border-radius: 10px
            z-index: 10
      .user-wrap
         z-index: 300
         position: absolute
         bottom: 0
         left: 0
         width: 162px
         height: 162px
         cursor: pointer
         .cover
            position: absolute
            z-index: 400
            width: 162px
            height: 162px
            background: url(../images/profile/Overlay_ProfilePictureFrame.png) 
            background-size:162px 162px
         img
            background: url(../images/fannect_UserPlaceholderPic@2x.png) no-repeat 
            background-size:140px 140px
            position: absolute
            top: 7px
            left: 11px
            width: 140px
            height: 140px
            border-radius: 10px
            z-index: 300
   .name
      font-size: 1.8em
      font-weight: bold
      text-align: center
      margin: 0 10px
      text-shadow: 0 2px 2px #000

   .team-name-wrap
      display: table
      position: relative
      width: 302px 
      height: 66px
      margin: 8px auto
      background: url(../images/profile/Profile_GlassMarquee.png) 
      background-size:302px 66px
      text-transform: uppercase
      text-decoration: none
      .team
         display: table-cell
         vertical-align: middle
         width: 222px
         height: 55px
         line-height: 1.3em
         color: color-light-gray
         text-align: center
         overflow: hidden
         padding: 0 40px 0
         text-overflow: ellipsis
         text-decoration: none
         font-weight: normal
         text-shadow: 0 2px 2px #000
      .icon
         position: absolute
         top: 26px
         right: 18px
         width: 13px
         height: 15px
         background: url(../images/profile/Profile_TeamArrows.png) no-repeat
         background-size: 31px 15px 

   .score-wrap
      position: relative
      width: 302px
      height: 36px
      margin: 8px auto
      background: url(../images/profile/Profile_ScoreDisplay-iPhone.png) 
      background-size:302px 36px
      .score
         position: absolute
         top: 10px
         width: 78px
         font-size: .7em
         font-family: JerseyM54, Helvetica, Arial, sans-serif
         .label
            text-transform: uppercase
            float: left
         .value
            float: right
         &.roster
            left: 20px
         &.points
            left: 113px
         &.rank
            left: 206px

   .shout-button
      background: url(../images/profile/Shout.png) no-repeat
      background-size: 265px 63px
      height: 63px
      width: 130px
      margin: 0 auto
      &.active
         background-position: -135px

   .shout-box
      position: relative
      display: table
      background: url(../images/profile/shoutBox.png)
      background-size: 270px 100px
      width: 270px
      height: 100px
      margin: 8px auto 0px
      // &.active
      //    dropshadow: 0px 0px 12px #c1272d
      //    border-radius: 5px

   .shout-text
      display: table-cell
      padding: 10px
      vertical-align: middle
      color: #aaa
      text-align: center
      font-size: 0.9em

   .shout-quote-left
      background: url(../images/profile/leftShoutQuote.png) no-repeat
      left: -3px

   .shout-quote-right
      background: url(../images/profile/rightShoutQuote.png) no-repeat
      right: -3px

   .shout-quote-left
   .shout-quote-right
      position: absolute
      background-size: 18px 16px
      top: 12px
      width: 18px
      height: 16px

   .shout-editable
      position: absolute
      top: 15px
      left: 10px
      right: 10px
      bottom: 15px
      border: none
      background: transparent
      dropshadow: none
      color: #aaa
      text-align: center
      font-size: 0.9em
      width: auto
      padding: 0
      margin: 0
      resize:none
      max-width: 250px

   .shout-actions
      width: 270px
      margin: auto

   .fan-dna-separator
      width: 320px
      height: 36px
      background: url(../images/profile/fanDNADivider.png)
      background-size: 320px 36px
      margin: 6px auto 5px auto
   
   .graph-wrapper
      background: url(../images/profile/fanDNAGraph-Box.png)
      background-size: 270px 169px
      width: 270px
      height: 169px
      margin: 0 auto
      .breakdown 
         width: 205px
         height: 154px
         margin: 0 auto
         padding-top: 12px
   .graph-base
      width: 200px
      height: 40px
      margin: -18px auto 0
      position: relative
      font-size: .7em
      text-shadow: 0 -2px 2px #000
      .highlight
         position: absolute
         left: -100px 
         background: url(../images/profile/graphBase.png) 50% 0 no-repeat
         background-size: 400px 51px
         width: 400px
         height: 51px
         z-index: 5
      .passion
      .dedication
      .knowledge
         color: #c0c0c0
         position: absolute
         top: 20px
      .passion
         left: -2px
      .dedication
         left: 77px
      .knowledge
         left: 155px

