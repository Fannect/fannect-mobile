@import "../lib/mixins"
@import "../lib/variables"

#profile-page
#profile-other-page
   
   .ui-btn-left.ui-btn-icon-notext
      height: 28px
      width: 35px
      .ui-icon-custom
         background: url(../images/icons/BarButton_RosterInvite@2x.png) 50% 50% no-repeat
         background-size: 18px 14px
         margin: 3px 0 0 5px
         height: 20px
         width: 25px

   .profile-images
      position: relative
      height: 250px
      width: 320px
      margin: 0 auto

      .team-wrap
         position: absolute
         right: 0
         top: 0
         width: 210px
         height: 210px
         cursor: pointer
         .cover
            position: absolute
            top: 0
            left: 0
            z-index: 200
            width: 210px
            height: 210px
            background: url(../images/profile/Overlay_TeamPictureFrame.png) no-repeat 
            background-size: 199px 197px
         img
            background: url(../images/fannect_TeamPlaceholderPic@2x.png) no-repeat 
            background-size: 188px 188px
            position: absolute
            top: 4px
            left: 5px
            height: 188px
            width: 188px
            border-radius: 10px
            z-index: 10
      .user-wrap
         z-index: 300
         position: absolute
         bottom: 0
         left: 2px
         width: 162px
         height: 162px
         cursor: pointer
         .cover
            position: absolute
            z-index: 400
            width: 162px
            height: 162px
            background: url(../images/profile/Overlay_ProfilePictureFrame.png) 
            background-size:162px 162px
         img
            background: url(../images/fannect_UserPlaceholderPic@2x.png) no-repeat 
            background-size:140px 140px
            position: absolute
            top: 7px
            left: 11px
            width: 140px
            height: 140px
            border-radius: 10px
            z-index: 300

      .verified-wrap
         position:absolute
         background: url(../images/profile/badge_Shelf.png) no-repeat
         background-size: 320px 38px
         width: 320px
         height: 38px
         bottom: 22px

         .verified-badge
            position:absolute
            top: 50%
            margin-top: -12.5px
            left: 160px

   .name
      font-size: 1.8em
      font-weight: bold
      text-align: center
      margin: 0 10px
      text-shadow: 0 2px 2px #000

   .team-name-wrap
      display:block
      position: relative
      width: 318px 
      height: 80px
      margin: 2px auto -18px
      background: url(../images/profile/smaller_TeamGlass.png) 50% 0 no-repeat
      background-size: 318px 80px
      text-transform: uppercase
      text-decoration: none
      .table-wrap
         position:absolute
         display: table
         width: 100%
         top: 3px
      .team
         display: table-cell
         vertical-align: middle
         width: 222px
         height: 66px
         line-height: 1.3em
         color: color-light-gray
         text-align: center
         overflow: hidden
         padding: 0 40px 0
         text-overflow: ellipsis
         text-decoration: none
         font-weight: normal
         text-shadow: 0 2px 2px #000
         color: #fff
      .icon
      .hint
         display:none
      &.editable
         background-image: url(../images/profile/larger_TeamGlass.png) 
         background-size:318px 90px
         height: 90px
         .table-wrap
            top: 8px
            .team
               height: 66px
         .icon
            display:block
            position: absolute
            top: 33px
            right: 22px
            width: 13px
            height: 15px
            background: url(../images/profile/Profile_TeamArrows.png) no-repeat
            background-size: 31px 15px 
         .hint
            display:block
            width:100%
            color: #777
            font-size: 10px
            font-weight:lighter
            text-align:center
            line-height:20px

   .score-wrap
      position: relative
      width: 302px
      height: 36px
      margin: 6px auto 6px
      background: url(../images/profile/Profile_ScoreDisplay-iPhone.png) 
      background-size:302px 36px
      .score
         position: absolute
         top: 10px
         width: 78px
         font-size: .7em
         font-family: JerseyM54, Helvetica, Arial, sans-serif
         .label
            text-transform: uppercase
            float: left
         .value
            float: right
         &.roster
            left: 20px
         &.points
            left: 113px
         &.rank
            left: 206px

   .shout-button
      background: url(../images/profile/Shout.png) no-repeat
      background-size: 540px 83px
      height: 83px
      width: 270px
      margin: 0 auto 3px
      &.ui-btn-active
         background-position: -270px 0
         border: 0

   .shout-box
      position: relative
      display: table
      background: url(../images/profile/shoutBox.png)
      background-size: 270px 100px
      width: 270px
      height: 100px
      margin: 8px auto 0px

   .shout-text
      display: table-cell
      padding: 10px
      vertical-align: middle
      color: #fff
      text-align: center
      font-size: 0.9em
      width: 100%

   .shout-date
      position: absolute
      bottom: 7px
      white-space: nowrap
      font-size: 10px
      right: 10px
      color: #777
      font-weight: lighter

   .shout-quote-left
      background: url(../images/profile/leftShoutQuote.png) no-repeat
      left: -3px

   .shout-quote-right
      background: url(../images/profile/rightShoutQuote.png) no-repeat
      right: -3px

   .shout-quote-left
   .shout-quote-right
      position: absolute
      background-size: 18px 16px
      top: 12px
      width: 18px
      height: 16px

   .shout-editable
      position: absolute
      top: 15px
      left: 10px
      right: 10px
      bottom: 15px
      border: none
      background: transparent
      dropshadow: none
      color: #aaa
      text-align: center
      font-size: 0.9em
      width: auto
      padding: 0
      margin: 0
      resize:none
      max-width: 250px

   .shout-actions
      width: 270px
      margin: auto

   .fan-dna-separator
   .shout-separator
      width: 320px
      height: 36px
      background-size: 320px 36px
      margin: 6px auto 5px auto
   
   .shout-separator
      background-image: url(../images/profile/ShoutDivider.png)

   .fan-dna-separator
      background-image: url(../images/profile/fanDNADivider.png)
      
   .graph-wrapper
      background: url(../images/profile/FanDNA_Frame.png)
      background-size: 298px 208px
      width: 298px
      height: 208px
      margin: 0 auto
      .breakdown 
         width: 220px
         height: 151px
         margin: 0 auto
         padding-top: 12px

   .next-game
      position: relative
      background: url(../images/profile/nextGame.png)
      background-size: 292px 183px
      width: 292px
      height: 183px
      margin: 4px auto 0
      
      .game-date
         position:absolute
         top: 9px
         left: 41px
         right: 26px
         text-align: center
      .team-wrap
         position:absolute
         display:table
         top: 56px
         width: 106px
         height: 44px
         text-align: center
         font-size: 12px
         &.away
            right: 18px
         &.home
            left: 20px
      .team-name
         display:table-cell
         vertical-align: middle
      .stadium-name
      .stadium-location
      .time-and-coverage-wrap
         position:absolute
         text-align:center
         left: 17px
         right: 15px
      .stadium-name
         font-size: 11px
         top: 102px
      .stadium-location
         color: #999
         font-size: 10px
         top: 118px
      .time-and-coverage-wrap
         display:table
         top: 129px
         font-size: 12px
         height: 30px
         width: 260px
         .time-and-coverage
            display: table-cell
            vertical-align: middle
            font-weight: lighter

   .swipe-item.inactive
      .activity-list
      .photo-list
         max-height: 200px
         overflow: hidden
   .activity
      position: relative
      width: 265px
      margin: 10px auto 0
      border: 2px solid #777
      dropshadow: 0 0 5px #000
      background: #fff url(../images/Pattern_FabricKnit.png)
      background-size: 4px 4px
      
      .no-activity
         margin: 10px
         color: #555
         text-align:center
         height: 42px
         line-height: 42px
         font-size: 20px
         text-shadow: 0 2px 0 #fff

      .load-more
         margin: 10px
      
      .loading-more-indicator
         margin: 5px auto 5px

      .activity-list
         .activity-item
            font-weight: lighter
            height: 78px
            position:relative
            background-highlight()
            border-bottom: 2px solid #bbb
            color: #000
            text-shadow: 0 1px 0 #fff
            .activity-icon
               position: absolute
               background: url(../images/icons/icons-gamecell-small.png) no-repeat
               background-size: 419px 48px
               height: 48px
               width: 48px
               top: 8px
               left: 12px
               &.attendence-streak
                  background-position: 0 0
               &.game-face
                  background-position: -53px 0
               &.guess-the-score
                  background-position: -106px 0
               &.guess-the-score
                  background-position: -159px 0
               &.gameday-pics
                  background-position: -212px 0
               &.photo-challenge
                  background-position: -265px 0
               &.picture-with-player
                  background-position: -318px 0
               &.spirit-wear
                  background-position: -371px 0
            .points
               position:absolute
               font-size: 10px
               left: 2px
               top: 59px 
               font-family: JerseyM54
               width: 65px
               white-space: nowrap
               text-align: center
               &.passion
                  color: #e01500
               &.dedication
                  color: #003cff
               &.knowledge
                  color: #008c0a
               .plus
                  font-family: Arial
                  font-style: italic
            .summary
               position:absolute
               left: 72px
               top: 10px
               right: 10px
               height: 40px
               font-size: 10px
               line-height: 13px
            .date
               position:absolute
               bottom: 6px
               right: 8px
               font-size: 10px
               font-weight: lighter
               color: #555

   .photo-stream
      position: relative
      width: 265px
      margin: 10px auto 0
      border: 2px solid #777
      dropshadow: 0 0 5px #000
      background: #fff url(../images/Pattern_FabricKnit.png)
      background-size: 4px 4px
      
      .no-photos
         margin: 10px
         color: #555
         text-align:center
         height: 42px
         line-height: 42px
         font-size: 20px
         text-shadow: 0 2px 0 #fff

      .load-more
         margin: 10px
      
      .loading-more-indicator
         margin: 5px auto 5px

      .photo-list
         .photo-item
            display:block
            position:relative
            background-highlight()
            border-bottom: 1px solid #bbb
            color: #000
            text-shadow: 0 1px 0 #fff
            text-decoration:none
            padding: 10px
            img.photo
               display:block
               width: 100%
            .caption
               display:block
               margin-top: 2px 
               font-weight: bold
               color: #2f3e46
            .date
               display:block
               font-size: 10px
               font-weight: lighter
               color: #c1272d


   .secondary-slider
      margin-top: 20px
      .swipe-header
         position:relative
         background: url(../images/profile/profile_SectionSwitch.png)
         background-size: 312px 55px
         width: 312px
         height: 55px
         margin: 0 auto
         .title
            font-size
            position:absolute
            height: 52px
            text-align:center
            left: 50px
            right: 50px
            line-height: 52px
            font-family: JerseyM54, Helvetica, Arial
            font-size: 1.3em
            color: #c0c0c0
         .next
            background: url(../images/profile/rightArrow_Active.png) 50% 50% no-repeat
            right: 2px
            &.inactive
               background: url(../images/profile/rightArrow_Inactive.png) 50% 50% no-repeat
         .prev
            background: url(../images/profile/leftArrow_Active.png) 50% 50% no-repeat
            left: 2px
            &.inactive
               background: url(../images/profile/leftArrow_Inactive.png) 50% 50% no-repeat
         .next
         .prev
            position: absolute
            background-size: 13px 20px !important
            width: 47px
            height: 52px
            top: 0

#profile-page
#settings-page
