#profile-shout-page
   .shout-text
      background: url(../images/shout/shout_textBox.png)
      background-size: 290px 111px
      margin: 0 auto 2px
      width: 290px
      height: 111px
      border: 0
      resize: none
      dropshadow: none
      font-size: .9em
      color: #000
      text-shadow: none
      &.warn
         dropshadow: 0 0 5px #c1272d
         border-radius: 8px

   .controls
      margin: 0 auto 0
      width: 290px

      .letter-count
         height: 26px
         line-height: 26px
         color: #bbb
         text-shadow: 0 1px 2px #fff

      .use-twitter
         background: url(../images/shout/twitter_icon.png) no-repeat
         background-size: 60px 26px
         float: right
         width: 30px
         height: 26px
         cursor: pointer

         &.active
            background-position: -30px
         

#profile-invites-page
   .no-invites
      text-shadow: 0 -1px 2px #fff
      color: #888
      text-align: center
      font-size: 1.3em
      margin-top: 18px
      line-height: 1.3em

#profile-chooseWebImage-page
   .web-images
      margin-left: -2px
   .web-image-column-left
   .web-image-column-right
      float: left
      width: 50%
   .web-image-column-left
      .web-image-wrap
         margin-right: 6px
   .web-image-column-right
      .web-image-wrap
         margin-left: 6px
   .web-image
      width: 100%
      margin-bottom: 6px
      border: 1px #ccc solid
      &.active
         border: 2px #c1272d solid
         dropshadow: 0 4px 10px rgba(0,0,0,.6)
         margin-left: -1px
         margin-top: -2px
   .web-image-disclaimer
      margin-top: 12px
      font-size: .8em
      text-align: center
      text-shadow: 0 1px 1px #fff
      color: #bbb
      clear: both

#settings-manageAccounts-page
#linkAccounts-page
   .link-button
      background: url(../images/LinkAccountButtons.png) no-repeat
      background-size: 591px 175px
      width: 293px
      height: 40px
      line-height: 40px
      color: #fff
      text-shadow: 0 -1px 0 #000
      margin: 5px auto
      text-align: center
      &.ui-btn-active
         border: 0
         background-position-x: -298px
         font-weight: normal
      &.facebook
         background-position-y: 0
      &.twitter
         background-position-y: -45px
      &.continue
         background-position-y: -90px
         color: #000
         text-shadow: 0 1px 0 #fff
      &.instagram
         background-position-y: -135px
   

