   .roster-icon-wrap
   .huddle-icon-wrap
      width: 140px
      display:block
      text-decoration: none
      border-radius: 21px
      padding: 5px
      text-shadow: 0 1px 3px #000
      &.ui-btn-active
         position: relative
         dropshadow: inset 1px 2px 6px #000, inset -1px 2px 6px #000, 0 1px 1px rgba(200,200,200,.5)
         top: 2px
         border: 0

   .roster-icon-wrap
      margin: -6px auto 0
   .huddle-icon-wrap
      margin: 0px auto 0
   .label   
      display:block
      text-align:center
      font-size: 24px
      font-weight: bold
      color: #fff
      margin-top: -4px


.icon-connect
   background-image: url(../images/icons/icons-connect.png)
   background-size: 285px 140px
   width: 140px
   height: 140px
   display:block
   &.roster
      background-position: 0 0
   &.huddle
      background-position: -145px 0

#connect-roster-page
   .my-roster-title
      color: #777
      text-align: center
      text-shadow: 0 1px 2px #fff
      font-size: 1.6em
      padding: 7px 0 15px
   
