@import "../lib/mixins"
@import "../lib/variables"

#connect-page
   background: url(../images/Pattern_FabricKnit.png)
   background-size: 4px 4px
   .ui-content
      padding: 0
      .build-your-team
         display: none
         margin: 0 auto
         color: #aaa
         text-shadow: none
         .gray-connect-icon
            background: url(../images/connect/Icon_ConnectGrayed.png) no-repeat
            background-size: 63px 54px
            width: 63px
            height: 54px
            margin: 15px auto 12px auto
         .title
            text-align: center
            font-size: 1.8em
            font-weight: bold
            margin-bottom: 12px
         .text
            margin: 0 auto
            width: 200px
            text-align: center
            font-size: 1.1em
            line-height: 1.4em

      .fans
         margin: 0

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   #connect-page
      background-image: url(../images/Pattern_FabricKnit@2x.png)
      .gray-connect-icon
         background-image: url(../images/connect/Icon_ConnectGrayed@2x.png)!important
