#index-page

   .logo
      background: url(../images/Fannect-Icon80.png) no-repeat
      background-size: 80px 80px
      height: 80px
      width: 80px
      margin: 10px auto

   .or-separator
      background: url(../images/LoginDivider.png) 50% 50% no-repeat
      background-size: 290px 13px
      height: 50px
      width: 290px
      margin-left: -10px

.input-container
   width: 270px
   margin: 5px auto 0

   label
      text-shadow: 0 2px 2px #000
   input.ui-body-a
      background: rgba(25,25,25,.45)
      border: 1px solid #666
      text-align: center

   .sub-container
      margin: 0 auto
      width: 200px

#resetPassword-page
   .input-container
      margin-top: 30px

#resetPassword-setPassword-page
#resetPassword-submitTemporary-page
   .explanation
      padding: 12px
      border: 1px #ccc solid
      border-radius: 5px
      background-color: rgba(100,100,100,.6)
      margin: 10px 0 20px
      font-weight: normal
      color: #ccc
      font-size: .9em
      text-align: center
      text-shadow: 0 1px 1px #000

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   #index-page
      .logo
         background-image: url(../images/Fannect-Icon80@2x.png)!important
      .or-separator
         background-image: url(../images/LoginDivider@2x.png)!important