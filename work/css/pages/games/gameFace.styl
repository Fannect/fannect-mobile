@import "../lib/mixins"
@import "../lib/variables"

#games-gameFace-page
   .game-face
      background: url(../images/games/gameFace/Gameface_Sprite.png)
      background-size: 370.5px 184px
      width: 184px
      height: 184px
      margin 15px auto 10px
      background-position: 0 0
      &.on
         background-position: -186px -185px
   
   .switch-wrap
      margin-top: 10px
      text-align: center
      .ui-slider
         margin: 0
         opacity: 1
         dropshadow: 0 2px 2px rgba(255,255,255,0.3)
         border: 1px #c1272d solid
         text-transform: uppercase

   .tutorial-gameface-sketch
      height: 151px
      background: url(../images/tutorial/Tutorial_gamefaceIcon.png) 50% 0 no-repeat
      background-size: 191px 151px
      margin: 8px 0 6px

   .tutorial-switch
      height: 54px
      background: url(../images/tutorial/Tutorial_onSwitch.png) 50% 0 no-repeat
      background-size: 163px 54px
      margin: 8px 0

   .plus-one
      background: url(../images/tutorial/Tutorial_plus1.png) 50% 0 no-repeat
      background-size: 141px 106px
      height: 106px
      margin: 8px 0

   p.scoring
      margin-top: 18px
      font-size: 1.2em
      line-height: 1.2em

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   #games-gameFace-page
      .game-face
         background-image: url(../images/games/gameFace/Gameface_Sprite@2x.png)
      .no-game-scheduled
         background-image: url(../images/games/BigTeamGlass@2x.png)
      .tutorial-gameface-sketch
         background-image: url(../images/tutorial/Tutorial_gamefaceIcon@2x.png)
      .tutorial-switch
         background-image: url(../images/tutorial/Tutorial_onSwitch@2x.png)
      .plus-one
         background-image: url(../images/tutorial/Tutorial_plus1@2x.png)