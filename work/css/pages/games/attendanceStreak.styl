@import "../lib/mixins"
@import "../lib/variables"

#games-attendanceStreak-page
   .ui-content
      padding: 0
      .info
         margin: 0 auto
         max-width: 600px
         height: 121px
         background: url(../images/games/attendanceStreak/Overlay_Marquee_iPhone.png) repeat-x 50% -1px
         background-size: 320px 121px
         position: relative
         overflow: hidden
         text-align: center
         .right-cap
         .left-cap
            position: absolute
            top: -6px
            width: 13px
            height: 110px
         .left-cap
            left: 0
            background: url(../images/games/attendanceStreak/Overlay_MarqueeCap_Left_iPhone.png)
            background-size: 13px 110px
         .right-cap
            right: 0
            background: url(../images/games/attendanceStreak/Overlay_MarqueeCap_Right_iPhone.png)
            background-size: 13px 110px
         .stadium-info
            padding-top: 8px
            .stadium
               font-size: 1.6em
               text-shadow: 0.1em 0.1em #000
               margin-bottom: 3px
            .location
               font-size: .7em
               color: color-light-gray
               text-shadow: 0.1em 0.1em #000

         .game-info
            margin-top: 10px
            font-size: .7em
            .team
               text-overflow: ellipsis
               white-space: nowrap;
            .record
               margin-top: 5px
               color: color-light-gray
               text-overflow: ellipsis
               white-space: nowrap;
            .home-info
               float: left
               width: 40%
               .inner
                  margin-left: 15px
            .vs
               float: left
               width: 20% 
               height: 36px
               background: url(../images/games/Overlay_VsButton.png) no-repeat 50% 0%
               background-size: 36px 36px
            .away-info
               float: left
               width: 40%
               .inner
                  margin-right: 15px
      // .map
      .bottom
         position: absolute
         width: 100%
         height: 96px
         bottom: footer-height
         background: url(../images/games/attendanceStreak/Overlay_ButtonHolder_iPhone.png) 50% 0%
         background-size: 320px 96px
         .inner
            max-width: 280px
            padding: 0 12px
            margin: 32px auto
            text-align: center
         .checked-in
            background: url(../images/games/attendanceStreak/Overlay_checkbox.png) 0% 50% no-repeat
            background-size: 39px 39px
            display: inline-block
            height: 39px
            padding-left: 46px
            line-height: 39px
            margin: 0 auto
            font-size: 1.4em
            font-weight: bold
         .next-game
            font-size: .8em
            padding-top: 4px
            .label
               color: color-light-gray
               margin-right: 4px

   .tutorial-map
      height: 146px
      background: url(../images/tutorial/Tutorial_map.png) 50% 0 no-repeat
      background-size: 219px 146px
      margin: 8px 0

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   #games-attendanceStreak-page
      .info
         background-image: url(../images/games/attendanceStreak/Overlay_Marquee_iPhone@2x.png)!important
         .left-cap
            background-image: url(../images/games/attendanceStreak/Overlay_MarqueeCap_Left_iPhone@2x.png)!important
         .right-cap
            background-image: url(../images/games/attendanceStreak/Overlay_MarqueeCap_Right_iPhone@2x.png)!important
      .bottom
         background-image: url(../images/games/attendanceStreak/Overlay_ButtonHolder_iPhone@2x.png)!important
         .checked-in
            background-image: url(../images/games/attendanceStreak/Overlay_checkbox@2x.png)!important
      .tutorial-map
         background-image: url(../images/tutorial/Tutorial_map@2x.png)!important
