extend layout

block header
   a(href="index.html", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="none") Create Account

block content
   .input-container
      input(type="text", name="firstname", data-bind="value: first_name", , placeholder="first name")
      input(type="text", name="lastname", data-bind="value: last_name", placeholder="last name")
      input(type="email", pattern="[^ @]*@[^ @]*", name="email", data-bind="value: email", placeholder="email")
      input(type="password", name="password", data-bind="value: password", placeholder="password")
      input(type="password", name="password", data-bind="value: confirm_password, onEnter: createAccount", placeholder="confirm")
      
      button(data-role="button", data-bind="click: createAccount") Create Account

block footer