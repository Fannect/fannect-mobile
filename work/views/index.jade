extend layout

block header
   h1 Sign In
   //- a.ui-btn-right(href="createAccount.html", data-role="button", data-transition="slide", data-theme="b") New Account

block content
   .logo

   .input-container
      
      form(data-bind="submit: login", data-ajax="false")
         //- label(for="email") Email
         input(type="text", name="email", id="email", data-bind="value: email", placeholder="email")
         //- label(for="password") Password
         input(type="password", name="password", id="password", data-bind="value: password", placeholder="password")

         button(data-role="button", type="submit", data-bind="showClick: true", data-theme="a") Login
      
      .or-separator

      .sub-container
         a(href="createAccount.html", data-role="button", data-transition="slide", data-theme="b", data-mini="true") Create Account
         a(href="resetPassword.html", data-role="button", data-transition="slide", data-theme="b", data-mini="true") Reset Password
      

