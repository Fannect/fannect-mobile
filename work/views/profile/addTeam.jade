extend ../layout

block header
   a(href="/profile/selectLeague", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="profile") Add Team
   a.ui-btn-right(href="profile-addTeam.html", data-role="button", data-icon="plus", data-transition="slide", data-theme="b") Add

block content
   ul.dark-pattern-bg(data-role="listview", data-theme="b", data-bind="foreach: teams, listviewUpdate: teams")
      li
         a(data-bind="click: $parent.selectTeam, text: name")
     