extend ../../layout

block header
   a(href="profile-selectTeam-chooseLeague.html", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="profile") Select Team
   
block content
   .loading-more-indicator(data-bind="visible: is_loading")
   ul.dark-pattern-bg(data-role="listview", data-theme="b", data-filter="true", data-filter-theme="b", data-bind="foreach: teams, listviewUpdate: teams")
      li
         a(data-bind="click: $parent.selectTeam, text: full_name, showClick: true")
     