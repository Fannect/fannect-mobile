extend ../layout

block header
   a(href="profile.html", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="profile") Select Team
   a.ui-btn-right(href="profile-selectTeam-chooseSport.html", data-role="button", data-icon="plus", data-transition="slide", data-theme="b") Add

block content
   ul.dark-pattern-bg(data-role="listview", data-theme="b", data-bind="foreach: teams, listviewUpdate: teams")
      li
         a(data-bind="click: $parent.selectTeam, showListviewClick: true")
            .sport-icon(data-bind="setClass: sport_key")
            span(data-bind="text: team_name")
   .loading-more-indicator(data-bind="visible: is_loading")

     