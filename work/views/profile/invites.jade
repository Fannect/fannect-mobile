extend ../layout

block header
   h1(data-menu-root="profile") Invites
   a(href="profile.html", data-icon="back", data-rel="back", data-theme="b", data-transition="slidedown") Profile
   a.ui-btn-right(data-bind="click: rightButtonClick", data-role="button", data-icon="refresh", data-transition="slide", data-theme="b", data-iconpos="notext")

block content
   ul.invite-list.pattern-bg(data-role="listview", data-theme="a", data-bind="template: { name:'invite-fan-template', foreach: invites, beforeRemove: hideInvite }, listviewUpdate: invites, visible: !no_invites()")
   .loading-more-indicator(data-bind="visible: is_loading")
   .no-invites(data-bind="fadeIn: no_invites", style="display:none;") 
      p Looks like no one's trying to recruit you. Get out and get noticed!
      .share-wrap
         .sub-title Recruit More Fans!
         .share-button.facebook(data-bind="showClick: true, click: shareViaFacebook")
         .share-button.twitter(data-bind="showClick: true, click: shareViaTwitter")
         .share-button.sms(data-bind="showClick: true, click: shareViaSMS")
         .share-button.email(data-bind="showClick: true, click: shareViaEmail")
