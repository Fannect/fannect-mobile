extend ../layout

block header
   h1(data-menu-root="profile") Choose Image
   a(href="profile.html", data-icon="back", data-rel="back", data-theme="b") Back
   //- a.ui-btn-right(href="profile-editGameDaySpot.html", data-role="button", data-role="click: next", data-transition="slide") Next

block content

   input(type="text", data-bind="value: query, valueUpdate: 'keyup'")

   .web-image-list(data-bind="foreach: images")
      .web-image-listitem(data-bind="click: $parent.chooseImage")
         .web-image-wrap
            img.web-image(data-bind="attr: { src: thumbnail.url }")
      // ko if: $index == $parent.images().length - 1 --><div class="clear"></div><!-- /ko
      //- // ko if false --><div class="clear"></div><!-- /ko


   div.loading-more-indicator(data-bind="visible: loading_more", style="display:none;")
