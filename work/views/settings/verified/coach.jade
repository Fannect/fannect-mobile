extend ../../layout

block header
   a(href="settings-verified.html", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="profile") Verfication

block content
   
   form.input-container(data-bind="submit: send", data-ajax="false")
      .explanation
         | Tell us a little about yourself
      
      input(type="text", name="sport", data-bind="value: sport", placeholder="sport")
      input(type="text", name="teams", data-bind="value: teams", placeholder="teams you've coached")
      
      button(data-role="button", type="submit") Send