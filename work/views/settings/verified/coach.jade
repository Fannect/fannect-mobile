extend ../../layout

block header
   a(href="settings-verified.html", data-icon="back", data-rel="back", data-theme="b") Back
   h1(data-menu-root="profile") Verfication

block content
   
   .input-container
      .explanation
         | Tell us a little about yourself
      
      input(type="text", name="sport", data-bind="value: sport", placeholder="sport")
      input(type="text", name="teams", data-bind="value: teams, onEnter: send", placeholder="teams you've coached")
      
      button(data-role="button", type="submit", data-bind="click: send") Send